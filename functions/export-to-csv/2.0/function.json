{
	"description": "Create a CSV from a collection of Records",
	"label": "Export to CSV",
	"category": "Utilities",
	"icon": "CreateIcon",
	"options": [
		{
			"name": "modelExport",
			"label": "Model EXPORT",
			"meta": {
				"type": "Model"
			}
		},
		{
			"name": "playGroundUrl",
			"label": "Playground url",
			"meta": {
				"type": "Text"
			}
		},
		{
			"label": "Delimiter",
			"info": "Set a delimiter for the CSV file",
			"name": "delimiter",
			"meta": {
				"validations": {
					"required": true
				},
				"type": "Select",
				"values": [
					{
						"label": ";",
						"value": ";"
					},
					{
						"label": ",",
						"value": ","
					},
					{
						"label": "|",
						"value": "|"
					},
					{
						"label": "tab",
						"value": "\t"
					},
					{
						"label": "space",
						"value": " "
					}
				]
			}
		},
		{
			"meta": {
				"type": "Model",
				"validations": {
					"required": true
				}
			},
			"name": "model",
			"label": "Model to save CSV into"
		},
		{
			"meta": {
				"allowedKinds": ["FILE"],
				"type": "Property",
				"model": "model",
				"validations": {
					"required": true
				}
			},
			"configuration": {
				"dependsOn": [
					{
						"option": "model",
						"action": "CLEAR"
					}
				]
			},
			"name": "property",
			"label": "Property"
		},
		{
			"name": "exportProperties",
			"label": "Properties in export",
			"meta": {
				"type": "Text"
			}
		},
		{
			"name": "webuserJwt",
			"label": "Webuser JWT Token",
			"meta": {
				"type": "Text"
			}
		},
		{
			"meta": {
				"type": "Output",
				"output": {
					"type": "Text"
				}
			},
			"name": "reference",
			"label": "As",
			"info": "The file reference"
		},
		{
			"label": "Use BOM",
			"name": "useBom",
			"info": "If true, adds a BOM character at the start of the CSV to improve file compatibility",
			"meta": {
				"type": "Boolean"
			},
			"configuration": {
				"placeholder": "true"
			},
			"advanced": true
		}
	],
	"yields": "NONE"
}
